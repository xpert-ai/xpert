{
  "name": "openai-compatible",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugins/openai-compatible/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "{projectRoot}/dist",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/plugins/openai-compatible/dist",
        "main": "packages/plugins/openai-compatible/src/index.ts",
        "tsConfig": "packages/plugins/openai-compatible/tsconfig.lib.json",
        "assets": [
          "packages/plugins/openai-compatible/*.md",
          {
            "glob": "**/*",
            "input": "packages/plugins/openai-compatible/src/_assets/",
            "output": "./src/_assets/"
          },
           {
            "glob": "**/*.yaml",
            "input": "packages/plugins/openai-compatible/src/",
            "output": "./src/"
          }
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "{projectRoot}/dist"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/plugins/openai-compatible/jest.config.ts"
      }
    }
  }
}
