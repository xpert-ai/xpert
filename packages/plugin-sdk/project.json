{
  "name": "plugin-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugin-sdk/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/plugin-sdk",
        "main": "packages/plugin-sdk/src/index.ts",
        "tsConfig": "packages/plugin-sdk/tsconfig.lib.json",
        "assets": [
          {
            "glob": "*.md",
            "input": "packages/plugin-sdk/",
            "output": "."
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/plugin-sdk/jest.config.ts"
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/packages/plugin-sdk",
        "access": "public"
      }
    }
  }
}
