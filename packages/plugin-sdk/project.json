{
  "name": "plugin-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugin-sdk/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/plugin-sdk/dist",
        "main": "packages/plugin-sdk/src/index.ts",
        "tsConfig": "packages/plugin-sdk/tsconfig.lib.json",
        "assets": [
          {
            "glob": "*.md",
            "input": "packages/plugin-sdk/",
            "output": "."
          }
        ],
        "project": "packages/plugin-sdk/package.json",
        "compiler": "swc",
        "format": ["cjs", "esm"],
        "external": [
          "@nestjs/common",
          "@nestjs/core",
          "@nestjs/microservices",
          "i18next-fs-backend",
          "i18next",
          "kafkajs",
          "amqplib",
          "mqtt",
          "nats",
          "zod"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/plugin-sdk/jest.config.ts"
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "dist/packages/plugin-sdk",
        "access": "public"
      }
    }
  }
}
